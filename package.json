{
  "name": "dka-sim",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @dka-sim/shared build && pnpm --parallel -r run dev",
    "build": "pnpm --filter @dka-sim/shared build && pnpm --parallel --filter !@dka-sim/shared -r run build",
    "test": "pnpm -r run test",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,css}\""
  },
  "pnpm": {
    "onlyBuiltDependencies": ["esbuild"]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.3.0",
    "typescript": "^5.6.0"
  }
}
